#!/bin/bash

. ../common/color.sh

blksize=(64b 256b 1k 4k)

rep=10

fs=$1

. ../common/fs/$fs.sh

fs_mount

for blksize in "${blksize[@]}"; do
    fio -filename=$M/file -direct=1 -iodepth 1 -thread -rw=randread -ioengine=psync -bs=$blksize -size=1G -numjobs=1 -group_reporting -name=mytest
    fio -filename=$M/file -direct=1 -iodepth 1 -thread -rw=randwrite -ioengine=psync -bs=$blksize -size=1G -numjobs=1 -group_reporting -name=mytest
done

fs_umount
